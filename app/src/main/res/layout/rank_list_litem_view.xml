<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/list_cover_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/music" />

        <TextView
            android:id="@+id/update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/list_cover_img"
            android:layout_alignBottom="@+id/list_cover_img"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="4dp"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:text="每日更新" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_task_texgt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="13dp"
            android:singleLine="true"
            android:text="1.xxxxx" />

        <TextView
            android:id="@+id/second_task_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="13dp"
            android:singleLine="true"
            android:text="2.xxxxx" />

        <TextView
            android:id="@+id/third_task_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="13dp"
            android:singleLine="true"
            android:text="3.xxxxx" />
    </LinearLayout>
</LinearLayout>